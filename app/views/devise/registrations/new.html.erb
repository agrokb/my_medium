<h2 class="title is-2">登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label>メール</label>
    <div class="columns">
      <div class="control is-two-thirds column">
        <%= f.email_field :email, class:"input is-success",autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="columns">
      <div class="control is-two-thirds column">
        <% if @minimum_password_length %>
          <label>パスワード<label class="has-text-danger">(制限字数<%= @minimum_password_length %>)</label></label>
        <% end %><br />
        <%= f.password_field :password,class:"input is-success", autocomplete: "new-password" %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <label>パスワード再入力</label>
    <div class="columns">
      <div class="control is-two-thirds column">
        <%= f.password_field :password_confirmation,class:"input is-success", autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="actions buttons">
    <%= f.submit "確認",class:"button is-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
